{
    "name": "@hug/ngx-snackbar",
    "version": "2.0.0",
    "description": "HUG Angular - snackbar component",
    "homepage": "https://github.com/dsi-hug/ngx-components",
    "license": "GPL-3.0-only",
    "author": "HUG - Hôpitaux Universitaires Genève",
