{
    "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
    "dest": "../../dist/ngx-status",
    "assets": [
        "CHANGELOG.md",
        {
            "input": "src/",
            "glob": "_status-theme.scss",
            "output": "."
        },
        {
            "input": "src/assets/translations",
            "glob": "**/*.json",
            "output": "assets/translations"
        }
    ],
    "lib": {
        "entryFile": "src/index.ts"
    }
}
