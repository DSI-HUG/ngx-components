{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targetDefaults": {
        "build:ng": {
            "dependsOn": ["^build:ng"]
        }
    },
    "release": {
        "projectsRelationship": "independent",
        "version": {
            "conventionalCommits": true
        },
        "changelog": {
            "projectChangelogs": {
                "createRelease": "github"
            }
        },
        "conventionalCommits": {
            "types": {
                "feat": {
                    "semverBump": "minor",
                    "changelog": {
                        "title": "üöÄ Features"
                    }
                },
                "fix": {
                    "semverBump": "patch",
                    "changelog": {
                        "title": "üêõ Fixes"
                    }
                },
                "perf": {
                    "semverBump": "patch",
                    "changelog": {
                        "title": "üî• Performance"
                    }
                },
                "docs": {
                    "semverBump": "patch",
                    "changelog": {
                        "title": "üìñ Documentation"
                    }
                },
                "deps": {
                    "semverBump": "patch",
                    "changelog": {
                        "title": "üå± Dependencies"
                    }
                },
                "refactor": {
                    "semverBump": "patch",
                    "changelog": false
                },
                "types": {
                    "semverBump": "patch",
                    "changelog": false
                },
                "style": {
                    "semverBump": "patch",
                    "changelog": false
                },
                "test": {
                    "semverBump": "patch",
                    "changelog": false
                },
                "revert": {
                    "semverBump": "patch",
                    "changelog": false
                },
                "chore": false,
                "build": false,
                "ci": false
            }
        }
    }
}
