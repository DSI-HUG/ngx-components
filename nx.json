{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targetDefaults": {
        "build:ng": {
            "dependsOn": [
                "^build:ng"
            ]
        }
    },
    "release": {
        "projectsRelationship": "independent",
        "version": {
            "conventionalCommits": true
        },
        "conventionalCommits": {
            "types": {
                "refactor": {
                    "semverBump": "patch",
                    "changelog": false
                },
                "styles": {
                    "semverBump": "patch",
                    "changelog": false
                },
                "docs": {
                    "semverBump": "patch",
                    "changelog": {
                        "title": "Documentation Changes"
                    }
                }
            }
        },
        "changelog": {
            "projectChangelogs": {
                "createRelease": "github"
            }
        }
    }
}
